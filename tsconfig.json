{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": ".",
    "types": ["node"]
  },
  "include": [
    "src",
    "prisma/seed.ts",
    "src/types",
    "src/handlers/getReportsHandler.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
